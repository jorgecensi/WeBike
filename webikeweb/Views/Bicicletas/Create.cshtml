@model WeBikeWeb.Aplicacao.ViewModels.AdicionarBicicletaViewModel

@{
    ViewBag.Title = "Cadastro de Bicicleta";
}

<legend>Cadastro de Bicicleta</legend>


@using (Html.BeginForm("Create", "Bicicletas", null, FormMethod.Post,
                                      new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h1>Informe os dados da bicicleta</h1>
     
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Aro, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Aro, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Aro, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quadro, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Quadro, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Quadro, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VlHora, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="input-group input-group-lg">
                    <span class="input-group-addon">$</span>
                    @Html.EditorFor(model => model.VlHora, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                    @Html.ValidationMessageFor(model => model.VlHora, "", new { @class = "text-danger" })
                
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VlDia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="input-group input-group-lg">
                    <span class="input-group-addon">$</span>
                    @Html.EditorFor(model => model.VlDia, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                    @Html.ValidationMessageFor(model => model.VlDia, "", new { @class = "text-danger" })
                
                </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VlSemana, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="input-group input-group-lg">
                    <span class="input-group-addon">$</span>
                    @Html.EditorFor(model => model.VlSemana, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                    @Html.ValidationMessageFor(model => model.VlSemana, "", new { @class = "text-danger" })
                </div>
        </div>

        @*Jorge
        Fazendo Upload de arquivo*@

        <div class="form-group">

            <label class="control-label col-md-2">Foto</label>

            <div class="col-md-10">
                <div class="input-group">
                    <label class="input-group-btn">
                        <span class="btn btn-primary">
                            <span class="glyphicon glyphicon-camera" aria-hidden="true"></span>
                            Adicionar Foto <input type="file" name="upload" style="display: none;" accept="image/*" multiple>
                        </span>
                    </label>
                    <input type="text" class="form-control" readonly>
                </div>


            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Entrega, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Entrega)
                    @Html.ValidationMessageFor(model => model.Entrega, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        
        @Html.Partial("_Endereco")

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cadastrar" class="btn btn-success" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquerymask")
    @Scripts.Render("~/bundles/jqueryinput")
}
