@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">            
            <a class="dropdown-toggle" data-toggle="dropdown">
                Ola  @User.Identity.GetUserName()
                <span class="caret"></span>
            </a>
                  
                @* //TODO
            o link abaixo acessa a conta do usuário
            precisa melhorar para poder disponibilizar
                *@
                @*@Html.ActionLink("Ola " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })*@

            <ul class="dropdown-menu" role="menu">
                <li>
                    @Html.ActionLink("Minhas Bicicletas","Index","Bicicletas")
                </li>
            </ul>
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Sair</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        @*Vou deixar o cadastro comentado pq dá pra criar usuário pela tela de login
